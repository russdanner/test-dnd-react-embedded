<?xml version="1.0" encoding="UTF-8"?>
<!--
    This file configures the drag-and-drop components available in the Preview Tools. Those components can then
    be dragged and dropped on a drop-zone within a page.

    The structure of this file is:

    <config>
        <category> (list of components that can be created on the fly during the drag and drop)
            <label />
            <component>
                <label />
                <type /> (reference content type of the component)
                <path /> (where to store these components)
            </component>
        </category>
        <browse> (list of browse paths of where to find ready components to be dragged/dropped)
            <label />
            <path /> (where to look for)
        </browse>
    </config>
-->
<config>
    <category>
        <label>General</label>
            <component>
                <label>Rich Text</label>
                <type>/component/rich-text</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
        </category>    
        
        <category>
        <label>Store App Elements</label>
            <component>
                <label>Float Cart</label>
                <type>/component/floatcart</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
            <component>
                <label>Github Corner</label>
                <type>/component/githubcorner</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
             <component>
                <label>Shelf</label>
                <type>/component/shelf</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
             <component>
                <label>Filter</label>
                <type>/component/filter</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
            <component>
                <label>Main</label>
                <type>/component/main</type>
                <path>/site/component/item/{objectGroupId}/{objectId}</path>
            </component>
    </category>
</config>